<%= provide :title, t(".title") %>
<div class="sub-banner overview-bgi">
    <div class="container">
        <div class="breadcrumb-area">
            <h1><%= t ".title" %></h1>
            <ul class="breadcrumbs">
                <li><a href="index.html"><%= t "home" %></a></li>
                <li class="active"><%= t ".title" %></li>
            </ul>
        </div>
    </div>
</div>

<div class="search-area" id="search-area-1">
  <div class="container">
    <div class="search-area-inner">
      <div class="search-contents ">
        <%= search_form_for @q, url: searchs_path do |f| %>
        <div class="row">
          <div class="col-6 col-lg-3 col-md-3">
            <div class="form-group">
              <h5>Brand</h5><br>
              <%= f.select :brand_id_eq_any, Brand.all.collect { |p| [ p.name, p.id ] },
               {}, {class: "selectpicker search-fields"} %>
            </div>
          </div>
          <div class="col-6 col-lg-3 col-md-3">
            <h5>Price</h5>
            <div class="radio">
              <input type="radio" name="rate" id="rate1" value="option1" >
              <label for="rate2">0 - 500 $ </label>
            </div>
            <div class="radio">
              <input type="radio" name="rate" id="rate2" value="option2">
              <label for="rate3">500 - 1.000 $</label>
            </div>
            <div class="radio">
              <input type="radio" name="rate" id="rate3" value="option3">
              <label for="rate4">1.000 - 2.000 $ </label>
            </div>
            <div class="radio">
              <input type="radio" name="rate" id="rate4" value="option4">
              <label for="rate5">2.000 $ + </label>
            </div>
          </div>
          <div class="col-6 col-lg-3 col-md-3">
            <div class="form-group">
              <button class="search-button btn-md btn-color" type="submit">Search</button>
            </div>
          </div> 
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

<div class="properties-list-fullwidth content-area-2">
  <div class="container">
    <div class="tabbing tabbing-box mb-60">
      <ul class="nav nav-tabs" id="carTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active show" id="reviews-tab" data-toggle="tab" href="#reviews" role="tab" aria-controls="reviews" aria-selected="false"><%= t ".review_title" %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="users-tab" data-toggle="tab" href="#users" role="tab" aria-controls="users" aria-selected="false"><%= t ".user_title" %></a>
        </li>
      </ul>
      <div class="tab-content" id="carTabContent">
        <% @flag = 1 %>
        <div class="tab-pane fade active show" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
          <h3 class="heading"><%= t ".review_result" %></h3>
          <div class="subtitle">
            <%= @reviews.count.to_s + " " + t("admin.reviews.index.result_found") %> 
          </div>
          <div class="row">
            <% @reviews.each do |review| %>
              <%= render "admin/reviews/review_detail", review: Review.find_by(id: review.id) %>
            <% end %>
            <div class="col-lg-12">
              <div class="pagination-box">
                <nav aria-label="Page navigation example">
                  <ul class="pagination">
                    <%= paginate @reviews %>
                  </ul>
                </nav>
              </div>
            </div>
          </div>
        </div>
        <div class="tab-pane fade" id="users" role="tabpanel" aria-labelledby="users-tab">
          <h3 class="heading"><%= t ".user_result" %></h3>
          <div class="subtitle">
            <%= @users.count.to_s + " " + t("admin.reviews.index.result_found") %>
          </div>
          <div class="row">
            <% @users.each do |user| %>
              <%= render "admin/users/user_detail", user: User.find_by(id: user.id) %>
            <% end %>
            <div class="col-lg-12">
              <div class="pagination-box">
                <nav aria-label="Page navigation example">
                  <ul class="pagination">
                    <%= paginate @users %>
                  </ul>
                </nav>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
