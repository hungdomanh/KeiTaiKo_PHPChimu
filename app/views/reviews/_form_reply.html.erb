<div class="comment">
  <div class="comment-author">
    <a href="#">
    <% if current_user.picture? %>
      <%= cl_image_tag(current_user.picture, :class => "rounded-circle") %>
    <% else %>
      <%= image_tag("https://2sao.vietnamnetjsc.vn/images/2018/06/26/00/39/dich-le-nhiet-ba-1.jpg", class:"rounded-circle") %>
    <% end %>
    </a>
  </div>
  <div class="comment-content">
    <div class="comment-meta">
      <div class="comment-meta-author">
        <%= current_user.name %>
      </div>
    </div>
    <div class="clearfix"></div>
    <div class="comment-body">
      <%= form_for :reply_comment, url: review_comments_path(@reply_review.id) do |f| %>
      <%= hidden_field_tag :parent_comment_id,
        @parent_comment.id %>
        <%= text_area :reply_comment, :content, :rows => 2, :cols => 70, 
          class:"form-control", placeholder: "Write message" %>
        <%= f.submit t(".reply_comment"), class:"btn btn-color btn-md btn-message" %>
      <% end %>
    </div>
  </div>
</div>
