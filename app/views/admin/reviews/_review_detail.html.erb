<div class="col-lg-4 col-md-6 col-sm-12" id="<%= review.id %>-details">
  <div class="property-box">
    <div class="property-thumbnail">
      <%= link_to review do %>
        <div class="price-ratings-box">
          <p class="price">
            <%= t ".price_str", price: price_review(review.price) %>
          </p>
          <div class="ratings">
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star-o"></i>
          </div>
        </div>
        <% if review.picture.present? %>
        <%= cl_image_tag(review.picture, class:"img-fluid") %>
        <% else %>
        <%= image_tag("banner-1.jpg", class:"img-fluid") %>
        <% end %>
      <% end %>
      <div class="property-overlay">
        <%= link_to review, class:"overlay-link" do %>
          <i class="fa fa-link"></i>
        <% end %>
        <!-- <a class="overlay-link property-video" title="Test Title">
        <i class="fa fa-video-camera"></i>
        </a>
        <div class="property-magnify-gallery">
          <a href="assets/img/property-2.jpg" class="overlay-link">
          <i class="fa fa-expand"></i>
          </a>
          <a href="assets/img/property-6.jpg" class="hidden"></a>
          <a href="assets/img/property-4.jpg" class="hidden"></a>
        </div> -->
      </div>
    </div>
    <div class="detail">
      <h1 class="title">
        <%= link_to review do %><%= review.name %><% end %>
      </h1>
      <div class="location">
        <a href="#">
        <i class="fa fa-map-marker"></i>Ha Noi, Viet Nam
        </a>
      </div>
      <ul class="facilities-list clearfix">
        <li>
          <span class="text-muted">Size: </span> <%= review.screen_size %>
        </li>
        <li>
          <span class="text-muted">OS: </span> <%= review.operator_system.name %>
        </li>
        <li>
          <span class="text-muted">Cpu: </span> <%= review.cpu %>
        </li>
        <li>
          <span class="text-muted">Battery: </span> <%= review.battery %>
        </li>
        <li>
          <span class="text-muted">Branch: </span> <%= review.brand.name %>
        </li>
        <% if user_signed_in? && current_user.is_admin? && @flag != 1%>
          <%= link_to admin_review_path(review), method: :put do %>
            <% if review.is_confirm? %>
              <li>
                <i class="fa fa-check-circle"></i> Checked
              </li>
            <% else %>
              <li>
                <i class="fa fa-ban"></i> Not Checked
              </li>
            <% end %>
          <% end %>
        <% end %>
      </ul>
    </div>
    <div class="footer">
      <a href="#">
      <% if review.user.present? %>
        <i class="fa fa-user"></i> <%= review.user.name %>
      <% else %>
        <i class="fa fa-user"></i> Unknown User
      <% end %>
      </a>
      <span>
      <i class="fa fa-calendar-o"></i> <%= review.created_at.strftime("%H:%M %-d/%-m/%y") %>
      </span>
    </div>
  </div>
</div>
