<%= provide :title, @brand.name %>

<div class="sub-banner overview-bgi">
    <div class="container">
        <div class="breadcrumb-area">
            <h1><%= @brand.name %></h1>
            <ul class="breadcrumbs">
                <li><%= link_to t(".home"), root_path %></li>
                <li class="active"><%= @brand.name %> ( <%= @reviews_of_brand.count %>  Review )</li>
            </ul>
        </div>
    </div>
</div>

<div class="blog-section content-area-2">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-12">
        <div class="row">
          <% @reviews_of_brand.each do |review| %>
          <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="blog-grid-box">
              <% if review.picture.present? %>
                <%= cl_image_tag(review.picture, class:"blog-theme") %>
              <% else %>
                <%= image_tag("banner-1.jpg", class:"blog-theme") %>
              <% end %>
              <div class="detail">
                <div class="date-box">
                  <h5><%= review.created_at.strftime("%d") %></h5>
                  <h5><%= review.created_at.strftime("%B") %></h5>
                </div>
                <h3>
                  <%= link_to review.name, review %>
                </h3>
                <div class="post-meta">
                  <span>
                    <%= link_to review do %>
                      <i class="fa fa-user"></i>
                      <% if review.user.present? %>
                        </i><%= review.user.name %>
                      <% else %>
                        Unknown
                      <% end %>
                    <% end %>
                  </span>
                  <span>
                    <%= link_to review do %>
                      <i class="fa fa-commenting-o"></i><%= review.comments.count %> Comment
                    <% end %>
                  </span>
                </div>
                <p><%= review.review %></p>
                <%= link_to "Read more", review, class:"btn-read-more" %>
              </div>
            </div>
          </div>
          <% end %>
          <div class="col-lg-12">
            <div class="pagination-box hidden-mb-45">
              <nav aria-label="Page navigation example">
                <ul class="pagination">
                  <%= paginate @reviews_of_brand %>
                </ul>
              </nav>
            </div>
          </div>
        </div>
      </div>
      <%= render "reviews/rightside" %>
    </div>
  </div>
</div>
