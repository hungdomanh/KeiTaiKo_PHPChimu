<div class="properties-list-fullwidth content-area-2">
  <div class="container">
    <div class="tabbing tabbing-box mb-60">
      <ul class="nav nav-tabs" id="carTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active show" id="<%= @brands.first.name %>-tab" data-toggle="tab" href="#<%= @brands.first.name %>" role="tab" aria-controls="<%= @brands.first.name %>" aria-selected="false"><%= @brands.first.name %></a>
        </li>
        <% @brands.last(@brands.count-1).each do |brand| %>
        <li class="nav-item">
          <a class="nav-link" id="<%= brand.name %>-tab" data-toggle="tab" href="#<%= brand.name%>" role="tab" aria-controls="<%= brand.name%>" aria-selected="false"><%= brand.name%></a>
        </li>
        <% end %>
      </ul>
      <div class="tab-content" id="carTabContent">
        <% reviews = @brands.first.reviews.last(6) %>
        <div class="tab-pane fade active show" id="<%= @brands.first.name %>" role="tabpanel" aria-labelledby="<%= @brands.first.name %>-tab">
          <h3 class="heading"><%= @brands.first.name %></h3>
          <div class="row">
            <% reviews.each do |review| %>
              <%= render "admin/reviews/review_detail", review: review %>
            <% end %>
          </div>
        </div>
        <% @brands.last(@brands.count-1).each do |brand| %>
        <% reviews = brand.reviews.last(6) %>
        <div class="tab-pane fade" id="<%= brand.name %>" role="tabpanel" aria-labelledby="<%= brand.name %>-tab">
          <h3 class="heading"><%= brand.name %></h3>
          <div class="row">
            <% reviews.each do |review| %>
              <%= render "admin/reviews/review_detail", review: review %>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

