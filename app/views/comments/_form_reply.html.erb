<div class="comment">
  <div class="comment-author">
    <a href="#">
    <% if current_user.picture? %>
      <%= cl_image_tag(current_user.picture, :class => "rounded-circle") %>
    <% else %>
      <%= image_tag("https://iupac.org/cms/wp-content/uploads/2018/05/default-avatar.png", class:"rounded-circle") %>
    <% end %>
    </a>
  </div>
  <div class="comment-content">
    <div class="comment-meta">
      <div class="comment-meta-author">
        <%= link_to current_user.name, user_path(current_user) %>
      </div>
    </div>
    <div class="clearfix"></div>
    <div class="comment-body">
      <%= form_for :reply_comment, url: review_comments_path(@reply_review.id), remote: true do |f| %>
      <%= hidden_field_tag :parent_comment_id,
        @parent_comment.id %>
        <%= text_area :reply_comment, :content, :rows => 2, :cols => 70,
          class:"form-control", placeholder: "Write message" %>
        <%= f.submit t(".reply_comment"), class:"btn btn-color btn-md btn-message" %>
      <% end %>
    </div>
  </div>
</div>
